# EditorConfig for GitSniper
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,js,tsx,jsx}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

[{package.json,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

