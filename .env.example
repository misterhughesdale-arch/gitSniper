# =============================================================================
# GitSniper Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# NEVER commit your .env file - it contains sensitive information!
# =============================================================================

# -----------------------------------------------------------------------------
# Required: Solana RPC
# -----------------------------------------------------------------------------
SOLANA_RPC_PRIMARY=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY

# -----------------------------------------------------------------------------
# Required: Yellowstone gRPC (Geyser Stream)
# -----------------------------------------------------------------------------
GRPC_URL=https://grpc.ny.shyft.to:443
X_TOKEN=your-shyft-or-triton-auth-token

# -----------------------------------------------------------------------------
# Required: Wallet
# -----------------------------------------------------------------------------
TRADER_KEYPAIR_PATH=./keypairs/trader.json

# -----------------------------------------------------------------------------
# Optional: Strategy
# -----------------------------------------------------------------------------
STRATEGY_FILE=momentum-breakeven.toml
FRESH_SNIPER_ENV=development

# -----------------------------------------------------------------------------
# Optional: Advanced
# -----------------------------------------------------------------------------
LOG_LEVEL=info
SKIP_PREFLIGHT=true
