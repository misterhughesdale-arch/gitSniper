# =============================================================================
# GitSniper Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# NEVER commit your .env file - it contains sensitive information!
# =============================================================================

# -----------------------------------------------------------------------------
# Required: Solana RPC
# -----------------------------------------------------------------------------
SOLANA_RPC_PRIMARY=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY

# -----------------------------------------------------------------------------
# Required: Yellowstone gRPC (Geyser Stream)
# -----------------------------------------------------------------------------
GRPC_URL=https://grpc.ny.shyft.to:443
X_TOKEN=your-shyft-or-triton-auth-token

# -----------------------------------------------------------------------------
# Required: Wallet
# -----------------------------------------------------------------------------
TRADER_KEYPAIR_PATH=./keypairs/trader.json

# -----------------------------------------------------------------------------
# Optional: Strategy
# -----------------------------------------------------------------------------
STRATEGY_FILE=momentum-breakeven.toml
FRESH_SNIPER_ENV=development

# -----------------------------------------------------------------------------
# Optional: Advanced
# -----------------------------------------------------------------------------
LOG_LEVEL=info
SKIP_PREFLIGHT=true

# -----------------------------------------------------------------------------
# Provider Racer (for benchmarking detection latency)
# -----------------------------------------------------------------------------
# WebSocket endpoints
HELIUS_WS=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY
QUICKNODE_WS=wss://your-endpoint.quiknode.pro/YOUR_KEY/
SOLANA_WS=wss://api.mainnet-beta.solana.com/

# HTTP endpoints for RTT
HELIUS_HTTP=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
QUICKNODE_HTTP=https://your-endpoint.quiknode.pro/YOUR_KEY/
SOLANA_HTTP=https://api.mainnet-beta.solana.com/
SHYFT_HTTP=https://rpc.shyft.to?api_key=YOUR_KEY

# Test duration
RUN_SECONDS=600
